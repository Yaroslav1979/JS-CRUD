{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">
  {{#with data}}
    <form method="POST" action="/purchase-submit?id={{id}}" class="form-card">
      {{>heading title="Зміна даних"}}
   
      <div class="info">
        <p class="info__title">ID:<span class="info__item"> {{id}} </span></p> 
      </div>

      {{>field label="Ім'я" name="firstname"}}

      {{>field label="Прізвище" name="lastname"}}

      {{>field label="Телефон" name="phone"}}

      {{>field label="Електронна пошта" name="email"}}

    
      {{>button text="Зберегти зміни"}}
    </form>
  {{/with}}  
  </div>
</main>



