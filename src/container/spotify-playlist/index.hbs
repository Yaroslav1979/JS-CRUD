{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class="main">  
 {{#with data}} 
  <div class="main__content">

    <h1 class="title title--center">{{name}}</h1>

    <a href="/spotify-add-track?playlistId={{playlistId}}" class="add-button">
      <img src="/img/Frame 8763.png" alt="add">
       Додати до плейлиста 
     </a>

    <ul class="track-list">
      {{#each tracks}}
      <li class="track">
        <img src="{{image}}" alt="{{name}}" class="track__image">
        <div class="track__content">
          <strong class="track__name">{{name}} </strong>
          <em class="track__author">{{author}} </em>
        </div>
        <a href="/spotify-track-delete?playlistId={{../playlistId}}
        &trackId={{id}}">
        <img src="/svg/Group 998.svg" alt="delete">
        </a>
      </li>
      {{/each}}
    </ul>     
    <a href="/spotify-list">До бібліотеки</a>
  </div>
  {{/with}}
</main>


        
