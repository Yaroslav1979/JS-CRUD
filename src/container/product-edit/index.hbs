
<main>
  <section>
    
    <h1 class="title title--center">Редагування товару</h1>

    <form method="POST" action="/product-edit">
        <h2 class="title--small">Інформація про товар:</h2>
        <div class="form__content">
          <div class="form__field">
            <label for="name" class="form__label">Назва товару:</label>
            <input type="name" name="name" class="form__input" value="{{product.name}}">
          </div>
          <div class="form__field">
            <label for="price" class="form__label">Ціна:</label>
            <input type="number" name="price" class="form__input" value="{{product.price}}">
          </div>
           <div class="form__field">
            <label for="id" class="form__label">ID:</label>
            <input type="number" name="id" class="form__input" value="{{product.id}}">
          </div>
          </div>
          <div class="form__field">
            <label for="description" class="form__label">Короткий опис товару:</label>
            <input type="text" name="description" class="form__input" value="{{product.description}}">
          </div>
          <p class="form__explain">Відображається у картці товару</p>
          <div class="form__content">
            <a href="/product-edit?id={{product.id}}" class="form__button">
              <button class="form__btn" type="submit" >Зберегти оновлення</button>
            </a>
            <a href="/product-delete?id={{product.id}}" class="form__button form__button--red">
             <button class="form__btn">Видалити товар</button>
            </a>
          </div>
      </form>
   
   
  </section>

